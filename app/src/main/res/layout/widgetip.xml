<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Widget.WidgetIp.AppWidget.Container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.WidgetIp.AppWidgetContainer">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/internal"
            style="@style/Widget.WidgetIp.AppWidget.InnerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/appwidget_text"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="0.01sp"
            android:autoSizeMaxTextSize="100sp"
            android:autoSizeStepGranularity="0.01sp"
            android:gravity="center"
            android:layout_weight="1"
            android:maxLines="1"
            android:padding="6dp"
            />
        <TextView
            android:id="@+id/separator"
            android:layout_height="6dp"
            android:background="@drawable/sep"
            android:layout_width="2dp"/>
        <TextView
            android:id="@+id/external"
            style="@style/Widget.WidgetIp.AppWidget.InnerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/appwidget_text"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="0.01sp"
            android:autoSizeMaxTextSize="100sp"
            android:autoSizeStepGranularity="0.01sp"
            android:layout_weight="1"
            android:maxLines="1"
            android:padding="6dp"
            />
    </LinearLayout>
</RelativeLayout>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Widget.WidgetIp.AppWidget.Container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.WidgetIp.AppWidgetContainer">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:id="@+id/internalFlag"
                style="@style/Widget.WidgetIp.AppWidget.InnerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:maxLines="1"
                android:layout_weight="5"
                android:layout_marginEnd="2dp"
                android:padding="6dp"
                android:text="F" />
            <TextView
                android:id="@+id/internal"
                style="@style/Widget.WidgetIp.AppWidget.InnerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:autoSizeMaxTextSize="100sp"
                android:autoSizeMinTextSize="0.01sp"
                android:autoSizeStepGranularity="0.01sp"
                android:autoSizeTextType="uniform"
                android:gravity="center"
                android:maxLines="1"
                android:layout_weight="1"
                android:padding="6dp"
                android:text="@string/appwidget_text" />
        </LinearLayout>

        <TextView
            android:id="@+id/separator"
            android:layout_width="2dp"
            android:layout_height="6dp"
            android:background="@drawable/sep" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:id="@+id/externalFlag"
                style="@style/Widget.WidgetIp.AppWidget.InnerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:maxLines="1"
                android:layout_weight="5"
                android:layout_marginEnd="2dp"
                android:text="F" />
            <TextView
                android:id="@+id/external"
                style="@style/Widget.WidgetIp.AppWidget.InnerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:autoSizeMaxTextSize="100sp"
                android:autoSizeMinTextSize="0.01sp"
                android:autoSizeStepGranularity="0.01sp"
                android:autoSizeTextType="uniform"
                android:gravity="center"
                android:maxLines="1"

                android:padding="6dp"
                android:text="@string/appwidget_text" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
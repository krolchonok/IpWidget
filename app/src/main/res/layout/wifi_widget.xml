<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Widget.IpWidget.AppWidget.Container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.IpWidget.AppWidgetContainer">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/internal"
            style="@style/Widget.IpWidget.AppWidget.InnerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/appwidget_text"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="0.01sp"
            android:autoSizeMaxTextSize="100sp"
            android:autoSizeStepGranularity="0.01sp"
            android:gravity="center"
            android:layout_weight="1"
            android:maxLines="1"
            android:padding="10dp"
            android:layout_marginBottom="2dp"/>

        <TextView
            android:id="@+id/external"
            style="@style/Widget.IpWidget.AppWidget.InnerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/appwidget_text"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="0.01sp"
            android:autoSizeMaxTextSize="100sp"
            android:autoSizeStepGranularity="0.01sp"
            android:layout_weight="1"
            android:maxLines="1"
            android:padding="10dp"
            android:layout_marginTop="2dp"/>
    </LinearLayout>
</RelativeLayout>